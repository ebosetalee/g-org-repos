{
  "name": "g-org-repos",
  "version": "1.0.0",
  "description": "Retrieves a list of public repositories belonging to an inputed Github Organisation",
  "main": "app.js",
  "scripts": {
    "start": "npm run build",
    "compile": "tsc && node dist/index.js",
    "dev": "nodemon --watch src/ --exec \"npm run compile\" --verbose -e ts",
    "dev:start": "tsc -w -e & nodemon ./dist",
    "watch:tsc": "rm -rf ./dist && tsc --watch -p ./tsconfig.json",
    "build:tsc": "tsc -p ./tsconfig.json",
    "test": "jest -i --passWithNoTests",
    "format": "prettier --config .prettierrc 'src/**/*.{js,ts,json,md}' --write"
  },
  "author": "Emmanuella <ertukpe@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.3",
    "response-time": "^2.3.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.6.1",
    "@types/response-time": "^2.3.8",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
