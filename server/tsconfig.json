{
  "compilerOptions": {
    "strict": false,
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "exclude": ["dist", "node_modules"]
}
