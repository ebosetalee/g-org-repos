{
  "compilerOptions": {
    "strict": false,
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": ["src/typings", "./node_modules/@types"],
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "exclude": ["src/**/*.test.ts", "src/**/mocks/*.ts", "jest.config.ts"]
}
